<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChangePasswordFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/layout1"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_back"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"></ImageButton>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="35sp"
        android:text="Change Password"
        android:textColor="@color/blue1"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/newPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_margin="18dp"
        android:background="@drawable/text_box"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColor="@color/white"
        android:textColorHint="#77FFFF99"
        android:textSize="20dp"
        android:translationY="80dp" />

    <EditText
        android:id="@+id/confirmnewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPass"
        android:layout_margin="18dp"
        android:background="@drawable/text_box"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColor="@color/white"
        android:textColorHint="#77FFFF99"
        android:textSize="20dp"
        android:translationY="70dp" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/changePassBtn"
        android:text="Submit"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/confirmnewPass"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/blue1">
    </Button>
</RelativeLayout>
</FrameLayout>
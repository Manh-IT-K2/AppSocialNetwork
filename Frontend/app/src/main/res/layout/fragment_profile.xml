<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.ProfileFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:elevation="2dp"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        android:id="@+id/toolbar" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/toolbarNameTV"
                android:layout_centerVertical="true"
                android:text="myylyyy"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:layout_margin="16dp"
                android:background="@drawable/ic_menu"
                >


            </ImageButton>



        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
       android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profileImage"
                app:civ_border_color="#76D1FA"
                app:civ_border_width="1dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_margin="14dp" />


            <ImageButton
                android:id="@+id/edit_profileImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@id/profileImage"
                android:layout_alignBottom="@id/profileImage"
                android:background="@drawable/ic_circle"
                android:elevation="3dp"
                android:src="@drawable/ic_add"
                android:translationX="-15dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:padding="4dp"

                android:text="Username"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationX="150dp"
                android:translationY="40dp" />

            <TextView
                android:id="@+id/statusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="love_to_travel_around_the_world"
                android:textColor="@color/colorPrimary"

                android:translationX="150dp"
                android:translationY="70dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/profileImage"
            android:layout_toEndOf="@id/profileImage"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/combineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_1">
        <LinearLayout
            android:id="@+id/countLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >
                <TextView
                    android:id="@+id/followingCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="250"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="following"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >
                <TextView
                    android:id="@+id/followerCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="25k"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="follower"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >
                <TextView
                    android:id="@+id/postCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="250"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="post"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>



        </LinearLayout>

        <RelativeLayout

            android:id="@+id/followLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countLayout"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:padding="5dp"
                android:id="@+id/edit_profileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:backgroundTint="#141218"
                android:minWidth="300dp"
                android:minHeight="4dp"
                android:text="Edit Profile"
                android:textColor="#008EFF"
                android:translationY="5dp"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:padding="5dp"
                android:id="@+id/qrcodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_profileBtn"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:minWidth="300dp"
                android:minHeight="4dp"
                android:text="QR code"
                android:textColor="#008EFF"
                android:translationY="5dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:padding="5dp"
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/qrcodeBtn"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:minWidth="300dp"
                android:minHeight="4dp"
                android:text="Log out"
                android:textColor="#008EFF"
                android:translationY="5dp" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C8C8C8"
        android:layout_below="@+id/combineLayout"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view" >

    </androidx.recyclerview.widget.RecyclerView>
   </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/img_loadPostStore"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <RadioButton
        android:id="@+id/selection_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold|italic"
        android:textColor="@color/blue1"
        android:textSize="13sp"
        android:buttonTint="@drawable/custom_radio_button_checked"
        app:layout_constraintEnd_toEndOf="@+id/img_loadPostStore"
        app:layout_constraintTop_toTopOf="@+id/img_loadPostStore" />
</androidx.constraintlayout.widget.ConstraintLayout>
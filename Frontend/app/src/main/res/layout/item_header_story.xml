<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_storyMainUser"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/circle_image"
        app:strokeColor="#C60188"
        app:strokeWidth="2dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/img_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/circle_add_story"
        android:elevation="4dp"
        android:src="@drawable/icon_add_night"
        app:layout_constraintBottom_toBottomOf="@+id/img_storyMainUser"
        app:layout_constraintEnd_toEndOf="@+id/img_storyMainUser"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/img_storyMainUser" />

    <TextView
        android:id="@+id/txt_nameUserStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Tin của bạn..."
        android:textSize="12dp"
        android:textStyle="italic"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/img_storyMainUser"
        app:layout_constraintStart_toStartOf="@+id/img_storyMainUser"
        app:layout_constraintTop_toBottomOf="@+id/img_storyMainUser"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
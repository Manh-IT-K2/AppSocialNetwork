<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackLite"
    tools:context=".fragments.SettingFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_setting">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Setting"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            android:layout_margin="16dp"
            android:background="@drawable/ic_back">
        </ImageButton>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_setting">
            <TextView
                android:id="@+id/dangnhapLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#A5A5A5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/createaccount_setting_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dangnhapLabel"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Create New Account"
                android:backgroundTint="#2E2D2D"
                android:background="@null"
                android:textSize="18sp"
                android:textColor="@color/blue1" />
            <Button
                android:id="@+id/logout_setting_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/createaccount_setting_Btn"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Log out"
                android:background="@null"
                android:backgroundTint="#2E2D2D"
                android:textSize="18sp"
                android:textColor="#FF0033" />
            <Button
                android:id="@+id/function_change_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logout_setting_Btn"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Change password"
                android:background="@null"
                android:backgroundTint="#2E2D2D"
                android:textSize="18sp"
                android:textColor="@color/blue1" />
        </RelativeLayout>




    </RelativeLayout>
</FrameLayout>
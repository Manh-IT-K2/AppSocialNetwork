<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_avtUser"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:srcCompat="@drawable/img_user"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        app:strokeWidth="1.5dp"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/circleImageview"/>
    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/idNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wuynklink_2106"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Thanh Quynh Linh"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang theo dõi"
            android:textSize="11sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/confirmRequest"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="Xác nhận"
            android:background="@drawable/custom_button_background"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="0dp"
            />
        <Button
            android:id="@+id/cancelRequest"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="Xóa"
            android:background="@drawable/custom_button_cancel_background"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="0dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
</LinearLayout>